<resources>

    <!--colors for default theme-->
    <style name="colorStyle">
        <item name="colorPrimary">@color/default_primary</item>
        <item name="colorPrimaryDark">@color/default_primaryVariant</item>
        <item name="colorOnPrimary">@color/default_onPrimary</item>
        <item name="colorAccent">@color/default_secondary</item>
        <item name="colorSecondary">@color/default_secondary</item>
        <item name="colorSecondaryVariant">@color/default_secondaryVariant</item>
        <item name="colorOnSecondary">@color/default_onSecondary</item>
    </style>

    <style name="chip">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">#ff339bff</item>
    </style>

    <style name="card_expand" parent="Text.Body2">
        <item name="android:paddingLeft">@dimen/card_content_padding</item>
        <item name="android:paddingRight">@dimen/card_content_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="oeh_text_title" parent="Text.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="oeh_text_content" parent="Text.Body2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Material Text Styles -->
    <style name="Text">
        <item name="android:fontFamily">@font/appfont</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Text.Body1" parent="@style/Text">
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="Text.Body2" parent="@style/Text">
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Text.Title" parent="@style/Text">
        <item name="android:fontFamily">@font/appfont</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="Text.ItemTitle" parent="@style/Text">
        <item name="android:fontFamily">@font/appfont</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>

    <style name="Text.Button" parent="@style/Widget.Material3.Button">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:fontFamily">@font/appfont</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">10dp</item>>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <attr name="themed_plot_background_color" format="reference" />

    <style name="plotStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">190dp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="card" parent="Widget.Material3.CardView.Elevated">
        <item name="contentPadding">@dimen/card_content_padding</item>
        <item name="android:layout_marginLeft">@dimen/card_content_padding</item>
        <item name="android:layout_marginRight">@dimen/card_content_padding</item>
        <item name="android:layout_marginBottom">@dimen/card_content_padding</item>
    </style>

    <!--this themes are for toolbars in cards-->
    <style name="cardToolbar.ActionButton.Overflow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <attr name="cardToolbarTheme" format="reference" />

    <style name="cardToolbar" parent="AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="actionOverflowButtonStyle">@style/cardToolbar.ActionButton.Overflow</item>
    </style>

    <style name="cardToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="mainToolbar" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="mainToolbarStyle" />
</resources>
