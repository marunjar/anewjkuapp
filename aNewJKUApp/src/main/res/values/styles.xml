<resources>

    <!--colors for default theme-->
    <style name="colorStyle">
        <item name="colorPrimary">@color/default_primary</item>
        <item name="colorPrimaryDark">@color/default_primaryDark</item>
        <item name="colorAccent">@color/default_accent</item>
    </style>
    <!--colors for sowi theme-->
    <style name="colorStyle.sowi">
        <item name="colorPrimary">@color/sowi_primary</item>
        <item name="colorPrimaryDark">@color/sowi_primaryDark</item>
        <item name="colorAccent">@color/sowi_accent</item>
    </style>
    <!--colors for re theme-->
    <style name="colorStyle.re">
        <item name="colorPrimary">@color/re_primary</item>
        <item name="colorPrimaryDark">@color/re_primaryDark</item>
        <item name="colorAccent">@color/re_accent</item>
    </style>
    <!--colors for tnf theme-->
    <style name="colorStyle.tnf">
        <item name="colorPrimary">@color/tnf_primary</item>
        <item name="colorPrimaryDark">@color/tnf_primaryDark</item>
        <item name="colorAccent">@color/tnf_accent</item>
    </style>
    <!--colors for med theme-->
    <style name="colorStyle.med">
        <item name="colorPrimary">@color/med_primary</item>
        <item name="colorPrimaryDark">@color/med_primaryDark</item>
        <item name="colorAccent">@color/med_accent</item>
    </style>

    <style name="chip">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">#ff339bff</item>
    </style>

    <style name="card_expand" parent="Text.Body2">
        <item name="android:paddingLeft">@dimen/card_content_padding</item>
        <item name="android:paddingRight">@dimen/card_content_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="oeh_text_title" parent="Text.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="oeh_text_content" parent="Text.Body2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Material Text Styles -->
    <style name="Text">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Text.Body1" parent="@style/Text">
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="Text.Body2" parent="@style/Text">
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="Text.Title" parent="@style/Text">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="Text.ItemTitle" parent="@style/Text">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>

    <style name="Text.Button" parent="@style/Text">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <attr name="themed_plot_background_color" format="reference" />

    <style name="plotStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">190dp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="card">
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardMaxElevation">@dimen/cardview_default_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/card_content_padding</item>
        <item name="cardBackgroundColor">?attr/cardBackgroundColor</item>
        <item name="android:layout_marginLeft">@dimen/card_content_padding</item>
        <item name="android:layout_marginRight">@dimen/card_content_padding</item>
        <item name="android:layout_marginBottom">@dimen/card_content_padding</item>
    </style>

    <!--this themes are for toolbars in cards-->
    <style name="cardToolbar.ActionButton.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="cardToolbar.light.ActionButton.Overflow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <attr name="cardToolbarTheme" format="reference" />

    <style name="cardToolbar" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="actionOverflowButtonStyle">@style/cardToolbar.ActionButton.Overflow</item>
    </style>

    <style name="cardToolbar.light" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="actionOverflowButtonStyle">@style/cardToolbar.light.ActionButton.Overflow</item>
    </style>

    <style name="cardToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetStart">0dp</item>
    </style>
</resources>
