        <item name="preferenceTheme">@style/PreferenceTheme</item>

        <item name="cardToolbarTheme">@style/cardToolbar</item>

        <item name="dialogTheme">@style/DialogStyle</item>
        <item name="alertDialogTheme">@style/DialogStyle.Alert</item>

        <item name="colorPrimary">@color/default_primary</item>
        <item name="colorPrimaryDark">@color/default_primaryVariant</item>
        <item name="colorOnPrimary">@color/default_onPrimary</item>
        <item name="colorAccent">@color/default_secondary</item>
        <item name="colorSecondary">@color/default_secondary</item>
        <item name="colorSecondaryVariant">@color/default_secondaryVariant</item>
        <item name="colorOnSecondary">@color/default_onSecondary</item>

        <item name="pastBackgroundColor">@color/pastBackgroundColor</item>
