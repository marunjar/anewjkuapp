<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/list_card_padding_left"
    android:paddingRight="@dimen/list_card_padding_right"
    android:paddingTop="@dimen/list_card_padding_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/rss_feed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|left" />

        <TextView
            android:id="@+id/rss_feed_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right" />

    </LinearLayout>


    <WebView
        android:id="@+id/rss_feed_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="4dp"></WebView>

</LinearLayout>