<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mensa_menu_item_name"
            style="@style/Text.ItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/separator_top_bottom_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title"/>

        <TextView
            android:id="@+id/mensa_menu_item_price"
            style="@style/Text.ItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/separator_top_bottom_margin"
            android:textColor="?attr/colorAccent"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/mensa_menu_item_name"
            app:layout_constraintLeft_toRightOf="@id/mensa_menu_item_name"
            tools:text="Price"/>

        <TextView
            android:id="@+id/mensa_menu_item_oeh_bonus"
            style="@style/Text.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/separator_top_bottom_margin"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintBaseline_toBaselineOf="@id/mensa_menu_item_price"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@id/mensa_menu_item_price"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Ã–H Bonus"/>

        <TextView
            android:id="@+id/mensa_menu_item_soup"
            style="@style/Text.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/separator_top_bottom_margin"
            app:layout_constraintLeft_toLeftOf="@id/mensa_menu_item_name"
            app:layout_constraintTop_toBottomOf="@id/mensa_menu_item_name"
            tools:text="Soup"/>

        <TextView
            android:id="@+id/mensa_menu_item_meal"
            style="@style/Text.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:padding="@dimen/separator_top_bottom_margin"
            app:layout_constraintLeft_toLeftOf="@id/mensa_menu_item_soup"
            app:layout_constraintTop_toBottomOf="@id/mensa_menu_item_soup"
            tools:text="Meal"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>